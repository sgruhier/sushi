@import "reset"

body
  font bold 18px "Helvetica Neue", Arial, Helvetica, sans-serif
  font-family 'Ovo', serif
  overflow none
  
a
  color #F95A5A
  text-decoration none

.clear 
  clear both
  
#plate_list ul

  span.color
    float right
    color: #DDD
    width 30px
    height 30px
    margin: -7px 30px 0 0 
    border-radius: 30px
    
#bill_list ul
  li 
    text-align center
    padding 4px 0 1px 0
    position relative
    
  span.color
    float none
    display inline-block
    color #DDD
    width 30px
    height 30px
    margin 0 0 0 0 
    border-radius: 30px

  span.text
    display inline-block
    vertical-align: 10px;
    color #333
    
  .increment, .decrement
    position absolute
    top 3px
    width 30px
    height 30px
    border-radius: 30px
    border: 1px solid #333
    font-size 20px
    font-weight 100
    line-height 30px
    
  .increment
    right 10px
    
  .decrement
    left 10px
  
.c_ffffff  
  border 1px solid #DDD
  margin-top -8px
  
.color 
  float left
  width 35px
  height 35px
  border-radius 20px
  margin 5px


.color.selected
  margin 2px
  border:3px solid #000

ul.menu li label
  font-size 22px
  float left
  
ul.menu li input
  -webkit-appearance: none;
  border: 0
  font-size 22px
  float left
  width: 200px
  margin-left 10px
      
.wrapper 
  position relative
  z-index 1
  width 100%
  overflow hidden

section .bottom 
  background-image -webkit-gradient(linear, 0 0, 0 100%, color-stop(0, #999), color-stop(0.02, #666), color-stop(1, #222))
  
.bottom
  font-family inherit
  font-weight bold
  color #fff
  text-shadow rgba(0, 0, 0, 0.5) 0px -1px 0
  text-overflow ellipsis
  text-decoration none
  white-space nowrap
  background none
  text-shadow 1px 1px 1px #000

  
.bottom a
  font-size 12px
  float left
  overflow hidden
  margin 0
  border-width 0 5px
  padding 0 3px
  width auto
  height 30px
  line-height 30px
  -webkit-border-image url(../../images/button.png) 0 5 0 5
  color inherit
  margin-left 10px

.bottom a#reset
  position absolute
  top 8px
  right 6px
  